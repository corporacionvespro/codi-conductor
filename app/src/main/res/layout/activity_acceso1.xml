<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:gravity="center" >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/isotipo_pasajero"
        android:layout_marginBottom="35dp" />

    <Button
        android:id="@+id/btnNuevoUsuario"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Soy un nuevo usuario"
        android:layout_marginHorizontal="70dp"
        android:layout_marginVertical="15dp"
        style="@style/botonAzul" />

    <Button
        android:id="@+id/btnTengoCuenta"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Ya estoy registrado"
        android:layout_marginHorizontal="70dp"
        android:layout_marginVertical="15dp"
        style="@style/botonTurquesa" />

</LinearLayout>
